@model List<mvc_project.Models.AdminViewModels>

@*@for (int i=0; i<Model.Count; i++)*@
@foreach (var item in Model)
{
    <tr>
        <td>@item.UserID</td>
        <td>@item.UserName</td>
        <td>@item.permissionDate</td>
        <td>@item.permissionNote</td>
        <td> @Html.CheckBox(@item.permissionID.ToString()) </td>
        @*<td> <input type="checkbox" /> </td>*@
    </tr>
    <tr id="temp"> </tr>
}
@*<div id="temp">
    here
</div>*@


<script>
    $('input[type="checkbox"]').click(function () {

        if ($(this).is(":checked")) {
            //alert("Checkbox is checked.");
            //alert($(this).attr('name'));
            var permID = $(this).attr('name');
            $("#temp").load("/Account/permissionResponse/" + permID);
            $(this).parent().parent().remove();

        }
        else if ($(this).is(":not(:checked)")) {
            alert("Checkbox is unchecked.");
        }
    });

</script>
